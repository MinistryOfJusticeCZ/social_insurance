= bootstrap_form_for(@information_request) do |f|
  = f.text_field(:firstname)
  = f.text_field(:lastname)
  = f.date_field(:birth_date)
  = f.text_field(:birth_number)
  = f.text_field(:birth_lastname)
  = f.date_field(:on_day)
  = f.check_box(:actual_employments_only)
  = f.text_area(:request_legitimacy_reason)
  = f.submit
