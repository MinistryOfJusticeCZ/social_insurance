<div class="container">
  <div class="mt-3">
    <%= render "czegov_publishing_components/components/back_link", { href: "?page_number=#{pages.page_number - 1}" } %>
  </div>

  <main id="main-content" class="main-wrapper" role="main">
    <div class="row">
      <div class="col-lg-8">
        <%= render "czegov_publishing_components/title", {
          title: @pages.page_title,
          margin_bottom: 4
        } %>
        <!--form action="/form-handler" method="post" novalidate-->
        <%= bootstrap_form_for(@information_request) do |f| %>

          <%= render @pages.page_path %>

          <%= render "czegov_publishing_components/components/button", {text: "Pokračovat"} %>
          <div><%= link_to 'Zrušit', "/" %></div>
        <% end %>
      </div>
    </div>
  </main>
</div>
